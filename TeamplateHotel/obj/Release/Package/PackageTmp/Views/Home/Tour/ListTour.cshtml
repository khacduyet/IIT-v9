@using System.Globalization
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using TeamplateHotel.Models
@using ProjectLibrary.Database
@using PagedList.Mvc
@model  PagedList.IPagedList<Tour>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
    var lang = Request.Cookies["LanguageID"].Value;
    var tourParent = ViewBag.getTourParent as PagedList.IPagedList<Tour>;
}
<main>
    <div class="container">
        <div class="facility-addons">
            <div class="content">
                <div class="cards">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-xs-6 col-md-6">
                                <figure>
                                    <figcaption style="background-image:url(@item.Image)">
                                        <img src="@item.Image" alt="">
                                    </figcaption>
                                    <a href="https://booking-guarantee.com/Home/SelectDate?hotelKey=IIT&lang=en&currency=USD" class="btn btn-clean button">
                                    @*<a href="/@item.MenuAlias/@item.ID/@item.Alias" class="btn btn-clean button">*@
                                        @item.Title
                                        <div class="button__horizontal"></div>
                                        <div class="button__vertical"></div>
                                    </a>
                                </figure>
                            </div>
                        }
                    </div>
                    <!--/row-->
                </div>
                <!--/cards-->
            </div>
        </div>
    </div>
    <!--/tab-content-->
</main>

