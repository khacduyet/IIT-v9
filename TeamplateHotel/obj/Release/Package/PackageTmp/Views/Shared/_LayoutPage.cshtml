@using ProjectLibrary.Database
@using TeamplateHotel.Controllers
@using TeamplateHotel.Handler
@using ProjectLibrary.Config
@using TeamplateHotel.Models
@{
    var lang = Request.Cookies["LanguageID"].Value;
    Hotel detailHotel = CommentController.DetailHotel(Request.Cookies["LanguageID"].Value);
    List<ShowObject> articleShowHots = CommentController.HotArticles(Request.Cookies["LanguageID"].Value);
    List<Language> languages = CommentController.GetLanguages();
    Plugin plugin = CommentController.GetPluigPlugin();
    List<Menu> menus = CommentController.GetMainMenus(Request.Cookies["LanguageID"].Value);
    Menu menuArticle = ViewBag.menuArticle ?? new Menu();
    List<Menu> menufooter = CommentController.GetSecondMenus(Request.Cookies["LanguageID"].Value);
    var language = languages.FirstOrDefault(a => a.ID == Request.Cookies["LanguageID"].Value) ?? new Language();
    string homepage = "";
    if (ViewBag.HomePage == true)
    {
        homepage = "home";
    }
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <title>@ViewBag.MetaTitle</title>
    <meta name="keywords" content="@ViewBag.MetaKeyword">
    <meta name="description" content="@ViewBag.MetaDesctiption">
    <link rel="shortcut icon" href="~/Content/images/favicon.png" />
    <link href="~/Content/image/logo.png" rel="icon">
    <link href="" rel="apple-touch-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- ajax -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css">
    <link rel="stylesheet" href="https://unpkg.com/aos@2.3.0/dist/aos.css">
    <link rel="stylesheet" href="~/Content/plugin/fullpage/fullpage.css">
    <!-- fontawesome 5-->
    <link rel="stylesheet" href="~/Content/plugin/fontawesome/css/all.min.css">
    <!-- Plugin css local-->
    <link rel="stylesheet" href="~/Content/plugin/owl/css/owl.carousel.css">

    <link rel="stylesheet" href="~/Content/plugin/owl/css/owl.theme.default.css">

    <!-- Template Main CSS File-->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/responsive.css">
    <link rel="stylesheet" href="~/Content/css/booking.css">
    <link rel="stylesheet" href="~/Content/plugin/owl/css/animate.css">
    <link rel="stylesheet" href="~/Content/css/rooms-list.css">

    @RenderSection("styles", false)
    <style>
            @Html.Raw(plugin.CSS)
    </style>
    @Html.Raw(plugin.JS)
</head>

<body class="preload">
    <div class="container-fluid overflow-hidden p-0">
        <!-- header with nav-->
        <!-- HEADER -->
        @Html.Partial("PartialView/Header")
        <!-- BODY -->
        @RenderBody()
        @Html.Partial("PartialView/Footer")
        <!-- FOOTER -->
    </div>

    <script src="~/Content/plugin/jquery-3.5.1.min.js"></script>
    <!-- show menu -->
    <script src="https://aurora.webtravel.vn/Asset/css/fullpage/fullpage.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script type="text/javascript " src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
    <!-- js local-->
    <script src="~/Content/plugin/owl/js/owl.carousel.js">
    </script>
    <script src="https://unpkg.com/aos@2.3.0/dist/aos.js"></script>
    <script src="~/Scripts/js/menu.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    <script src="~/Scripts/js/slide.js"></script>
    <script src="~/Scripts/js/check.js"></script>
    <!-- Modal -->

    <script>
        AOS.init();
    </script>
    <script>
        $('#exampleModal').on('show.bs.modal', event => {
            var button = $(event.relatedTarget);
            var modal = $(this);
            // Use above variables to manipulate the DOM

        });
    </script>

    <!-- Template Main JS File -->
    @RenderSection("scripts", false)
</body>
</html>

